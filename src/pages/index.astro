---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Hero from '../components/Hero.astro'
import Feature from '../components/Feature.astro'
import { Icon } from 'astro-icon/components'
---

<DefaultLayout title="Home">
  <Hero />
  <section id="events" class="my-64">
    <div class="container">
      <h2 class="mb-16 text-6xl">Eventos</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        <Feature title="I. Astro, Storyblok y Software Libre">
          <p>Miercoles 7 de Febrero</p>
          <p>19:30</p>
          <div class="place">
            <Icon name="mdi:map-marker" />
            <a target="blank" href="https://www.google.com/maps/place//data=!4m2!3m1!1s0xd16e55e02bfe0b9:0x5d14f53fd63fc7b8?sa=X&ved=2ahUKEwiQlrbOuJSEAxUfSfEDHVZ6DEwQ4kB6BAgvEAA">La Croque 3.7.8</a>
          </div>
          <div class="talk">
            <div class="speaker">
              <img src="/borja.jpeg" alt="Foto ponente Borja Godoy">
              <a href="">Borja Godoy</a>
            </div>
            <p class="talk-name">Migrando de Wordpress a ASTRO + Storyblok.</p>
          </div>
          <div class="talk">
            <div class="speaker">
              <img src="/fran.JPG" alt="Foto ponente Fran Méndez">
              <a href="">Fran Méndez</a>
            </div>
            <p class="talk-name">El software libre ya esta cambiando el mundo.</p>
          </div>
          <!-- <button
            id="join"
